<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<div class="container">
  <div class="row">
     <div class="col-md-3 text-center">
         <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
       </div>
     
       <div class="col-md-6">
         <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
         <!-- JOB TITLE ICON IS SUPPOSED TO BE INBETWEEN SPAN !-->
        <h3><span></span></span><%= @user.profile.job_title %></h3>
        <div class="well profile-block profile-description">
          <h3>Profile Description</h3>
          <%= @user.profile.description %>
        </div>
         <% if current_user.plan_id == 1 or 2 %>
         <div class="well profile-block profile-contact">
           <h3>Contact Information</h3>
          <%= @user.profile.phone_number %><br/>
          <%= @user.profile.contact_email %><br/>
         </div>
         <% end %>
        </div>
    </div>
</div>